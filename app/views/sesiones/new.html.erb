<% content_for (:page_title) do %>
<p class="brand">Entrar al sistema</p>
<% end %>

<div class="loginContainer">
  <%= form_tag sesiones_path, :class => 'form-horizontal' do %>

  <div class="form-row row-fluid">
    <div class="span12">
      <div class="row-fluid">  
        <% if flash[:alert] %>
        <p class="error"><%= flash[:alert] %></p>
        <% end %>  
      </div>
    </div>
  </div>

  <div class="form-row row-fluid">
    <div class="span12">
      <div class="row-fluid">
        <div class="field">
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email] %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-row row-fluid">
    <div class="span12">
      <div class="row-fluid">
        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-row row-fluid">                       
    <div class="span12">
      <div class="row-fluid">
        <div class="form-actions">
          <div class="span12 controls center">
            <div class="actions"><%= submit_tag "Log in" %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div> 
  </div>
</div>
